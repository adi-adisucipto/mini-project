
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Token {
  id Int @id @default(autoincrement())
  token String @unique
}

model User {
  user_id        String  @id @default(uuid())
  username       String
  email          String  @unique
  password       String
  role           Role    @default(USER)
  avatar         String?
  avatar_id      String?
  referral_code  String
  referrerId      String? @map("referrer_user_id")
  points_balance Int     @default(0)
  created_at     DateTime @default(now())

  referrer User? @relation("ReferredBy", fields: [referrerId], references: [user_id])
  referredUser User[] @relation("ReferredBy")

  @@map("users")
}

enum Role {
  USER
  ADMIN
  ORGANAIZER
}