

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Token {
  id Int @id @default(autoincrement())
  token String @unique
  createdAt DateTime @default(now())
  expires_at DateTime
}

model User {
  user_id String @id @default(uuid())
  username String @unique
  email String @unique
  password String
  role Role @default(USER)
  avatar String?
  avatar_id String?
  referral_code String @unique
  referrerId String?
  points_balance Int @default(0)
  created_at DateTime @default(now())

  referrer User? @relation("ReferredBy", fields: [referrerId], references: [user_id])
  referredUsers User[] @relation("ReferredBy")

  pointHistory PointTransactions[]
  coupon Coupon[]
  events       Event[]
  refreshTokens RefreshToken[]
  transaction Transaction[]
  review RiviewEvent[]


  refreshTokens RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id String @id @default(uuid())
  user_id String
  token String
  expires_at DateTime

  user User @relation(fields: [user_id], references: [user_id])
}

model Event {
  event_id        String      @id @default(uuid())
  organizer_id    String
  name            String
  description     String
  price           Decimal
  start_date      DateTime
  end_date        DateTime
  available_seats Int
  total_seats     Int
  category        String
  location        String
  is_paid         Boolean  @default(true)
  created_at      DateTime @default(now())

  organizer       User     @relation(fields: [organizer_id], references: [user_id])
  transaction     Transaction[]
  review          RiviewEvent[]
  voucher         Voucher[]

  @@map("events")
}

enum Role {
  USER
  ORGANIZER
  ADMIN
}

model PointTransactions {
  point_history_id String @id @default(uuid())
  user_id String
  amount_change Int
  point_remaining Int
  created_at DateTime @default(now())
  expiration_date DateTime
  status Status @default(Available)
  used_at DateTime?

  user User @relation(fields: [user_id], references: [user_id])
  transaction PointUse[]

  @@map("point_transactions")
}

enum Status {
  Available
  Used
}

model Coupon {
  coupon_id String @id @default(uuid())
  user_id String
  code String @unique
  discount_amount Decimal
  expiration_date DateTime
  is_used Boolean @default(false)
  used_at DateTime?
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [user_id])
  transaction Transaction[]

  @@map("coupon")
}

model Transaction {
  transaction_id String @id @default(uuid())
  customer_id String
  event_id String
  ticket_quantity Int @default(1)
  total_price_paid Decimal
  statusPay StatusPay @default(WaitingPay)
  proof_upload_at DateTime?
  payment_proof_url String?
  payment_proof_due_at DateTime?
  organizer_confirmation_due_at DateTime?

  points_used Decimal @default(0)
  coupon_use_id String?
  voucher_used_id String?

  created_at DateTime @default(now())

  customer User @relation(fields: [customer_id], references: [user_id])
  event Event @relation(fields: [event_id], references: [event_id])
  coupon Coupon? @relation(fields: [coupon_use_id], references: [coupon_id])
  voucher Voucher? @relation(fields: [voucher_used_id], references: [voucher_id])
  point PointUse[]

  @@map("transaction")
}

enum StatusPay {
  WaitingPay
  WaitingConfirm
  Done
  Rejected
  Expired
  Canceled
}

model RiviewEvent {
  riview_id String @id @default(uuid())
  customer_id String
  event_id String
  rating Rating @default(A)
  review_text String
  created_at DateTime @default(now())

  customer User @relation(fields: [customer_id], references: [user_id])
  event Event @relation(fields: [event_id], references: [event_id])

  @@map("review_event")
}

enum Rating {
  A
  B
  C
  D
  E
}

model Voucher {
  voucher_id String @id @default(uuid())
  event_id String
  code String @unique
  discount_amount Decimal
  start_date DateTime
  end_date DateTime
  usage_limit Int
  is_active Boolean @default(true)

  event Event @relation(fields: [event_id], references: [event_id])
  transaction Transaction[]

  @@map("voucher")
}

model PointUse {
  id String @id @default(uuid())
  transaction_id String
  point_id String
  amount_used Decimal

  transaction Transaction @relation(fields: [transaction_id], references: [transaction_id])
  point PointTransactions @relation(fields: [point_id], references: [point_history_id])

  @@map("point_use")
}