

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Token {
  id Int @id @default(autoincrement())
  token String @unique
  createdAt DateTime @default(now())
  expires_at DateTime
}

model User {
  user_id String @id @default(uuid())
  username String @unique
  email String @unique
  password String
  role Role @default(USER)
  avatar String?
  avatar_id String?
  referral_code String @unique
  referrerId String?
  points_balance Int @default(0)
  created_at DateTime @default(now())

  referrer User? @relation("ReferredBy", fields: [referrerId], references: [user_id])
  referredUsers User[] @relation("ReferredBy")

  pointHistory PointTransactions[]
  coupon Coupon[]

  events       Event[]

  refreshTokens RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id String @id @default(uuid())
  user_id String
  token String
  expires_at DateTime

  user User @relation(fields: [user_id], references: [user_id])
}

model Event {
  event_id        String      @id @default(uuid())
  organizer_id    String
  name            String
  description     String
  price           Int
  start_date      DateTime
  end_date        DateTime
  available_seats Int
  total_seats     Int
  category        String
  location        String
  is_paid         Boolean  @default(true)
  created_at      DateTime @default(now())

  organizer       User     @relation(fields: [organizer_id], references: [user_id])

  @@map("events")
}



enum Role {
  USER
  ORGANIZER
  ADMIN
}

model PointTransactions {
  point_history_id String @id @default(uuid())
  user_id String
  amount_change Int
  point_remaining Int
  created_at DateTime @default(now())
  expiration_date DateTime

  user User @relation(fields: [user_id], references: [user_id])

  @@map("point_transactions")
}

model Coupon {
  coupon_id String @id @default(uuid())
  user_id String
  code String @unique
  discount_amount Decimal
  expiration_date DateTime
  is_used Boolean
  used_at DateTime
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [user_id])

  @@map("coupon")
}